<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:startColor="#56789A"
                android:centerColor="#304356"
                android:centerY="0.50"
                android:endColor="#56789A"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:startColor="#FF9625"
                    android:centerColor="#975717"
                    android:centerY="0.50"
                    android:endColor="#FF9625"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress" >
        <clip>
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient
                    android:startColor="#AA0000"
                    android:centerColor="#700000"
                    android:centerY="0.50"
                    android:endColor="#AA0000"
                    android:angle="270" />
            </shape>
        </clip>
    </item>

</layer-list>